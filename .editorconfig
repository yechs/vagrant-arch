[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Vagrantfile]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 72
